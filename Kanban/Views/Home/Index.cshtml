<div class="container" style="background: url('/Images/simple-kanban.jpg') 50% 0 no-repeat; height: 540px; width: 100%">
</div>
<div class="row" ng-controller="AppCtrl">
    <div class="col-md-12">

        <div class="jumbotron">
            <h1>Hello {{name || "World!"}}</h1>
            <div class="form-group">
                <input name="Name" id="Name" type="text" class="form-control" ng-model="name" />
                <input type="button" class="btn btn-primary" id="myButton" value="Click" />
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-horizontal hidden-xs">
            <fieldset>


                <!-- change col-sm-N to reflect how you would like your column spacing (http://getbootstrap.com/css/#forms-control-sizes) -->
                <!-- Form Name -->
                <legend>Personal Data</legend>

                <!-- Text input http://getbootstrap.com/css/#forms -->
                <div class="form-group">
                    <label for="Name" class="control-label col-sm-4">Name</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="Name" placeholder="" required="">

                    </div>
                </div>
                <!-- Text input http://getbootstrap.com/css/#forms -->
                <div class="form-group">
                    <label for="LastName" class="control-label col-sm-4">Last Name</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="LastName" placeholder="">

                    </div>
                </div>
                <!-- Spinbox http://getfuelux.com/javascript.html#spinbox -->
                <div class="form-group">
                    <label for="Age" class="control-label col-sm-4">Age</label>
                    <div class="col-sm-8">
                            <input id="AgeInput" type="number" class="form-control" value="21" required="">
                    </div>
                </div>
                <!-- Button http://getbootstrap.com/css/#buttons -->
                <div class="form-group">
                    @*<label class="control-label col-sm-4" for="save">Save</label>*@
                    <div class="text-left col-sm-8 col-sm-offset-4">
                        <button ng-click="clickHandler()" type="button" id="save" name="save" class="btn btn-primary" aria-label="Save">Save</button>

                    </div>
                </div>
            </fieldset>
        </div>
        <div class="col-md-12" ng-hide="isHidden">
            <h2>I'm not hidden!</h2>
        </div>
        <div ng-class="{'text-center':center, 'text-danger':error}">
            <div>Some text</div>
        </div>
        <label><input type="checkbox" ng-model="center"/>text center</label>
        <label><input type="checkbox" ng-model="error" />text danger</label>
        <ul class="list-inline">
            <li ng-repeat="contact in contacts">
                {{contact.name + " " + contact.lastName + " " + contact.job}}
            </li>
        </ul>
        <hr />
        <dl class="dl-horizontal" ng-repeat="item in contacts">
            <dt>Name</dt>
            <dd>{{item.name}}</dd>
            <dt>Last Name</dt>
            <dd>{{item.lastName}}</dd>
            <dt>Job</dt>
            <dd>{{item.job}}</dd>
        </dl>
        <hr/>
        <table id="grid">
        </table>
        <hr/>
        <div class="col-md-12">
            <img src="/Images/candy-1961536_640.jpg" class="img-rounded img-responsive" />
            <img src="/Images/sun-115448_640.jpg" class="img-circle img-responsive"  />
            <img src="/Images/beaded-2137080_640.jpg" class="img-thumbnail img-responsive"/>
        </div>
        <div class="row">
            <a class="btn" href="#!add">add</a>
            <a class="btn" href="#!index">index</a>
            <div ng-view></div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Currencies</h3>
                    </div>
                    <div class="panel-body">
                        {{12345.6789 | number: 2 }}
                        <br/>
                        {{'pawel' | limitTo: 3 | uppercase }}
                        <br/>
                        {{'3/16/2017' | date: format: 'yyyy'}}
                        <br/>
                        <ol>
                            <li ng-repeat="item in contacts | orderBy: 'name'">
                                {{item.name + " " + item.lastName + " " + item.job}}
                            </li>
                        </ol>
                        <hr/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        cont = [
        {
            name: 'Jan',
            lastName: 'Kowalski',
            job: 'IT'
        },
        {
            name: 'Janina',
            lastName: 'Kowalska',
            job: 'Menago.Corp'
        },
        {
            name: 'Tomak',
            lastName: 'Nowak',
            job: 'BI COO'
        },
        {
            name: 'Kamil',
            lastName: 'Malinowski',
            job: 'Asembler Developer'
        },
        {
            name: 'Ola',
            lastName: 'Kowalska',
            job: 'HR'
        }
        ];

        $(function () {
            $("#grid").kendoGrid({
                sortable: true,
                pageable: true,
                dataSource: {
                    data: cont,
                    pageSize: 3
                }
            });
        })
    </script>
}